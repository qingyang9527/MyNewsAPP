<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/news_header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/news_photo"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    />
                <TextView
                    android:id="@+id/news_title"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="this is a news title"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/news_photo" />


                <TextView
                    android:id="@+id/news_ctime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="this is create time"
                    android:layout_marginLeft="35dp"
                    android:layout_toRightOf="@+id/news_desc"
                    android:layout_alignBottom="@+id/news_desc"/>

                <TextView
                    android:id="@+id/creater_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/news_title"
                    android:text="by:"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:id="@+id/news_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="creater"
                    android:layout_toRightOf="@+id/creater_by"
                    android:layout_alignBottom="@+id/creater_by" />
            </RelativeLayout>



        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>